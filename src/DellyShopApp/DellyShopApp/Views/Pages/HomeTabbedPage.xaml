<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    x:Class="DellyShopApp.Views.Pages.HomeTabbedPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
    xmlns:tabbedPages="clr-namespace:DellyShopApp.Views.TabbedPages;assembly=DellyShopApp"
    android:TabbedPage.IsSwipePagingEnabled="False"
    android:TabbedPage.ToolbarPlacement="Bottom"
    BarBackgroundColor="{DynamicResource ItemColor}"
    BarTextColor="Transparent"
    NavigationPage.HasNavigationBar="False"
    SelectedTabColor="{DynamicResource DarkFontColor}"
    UnselectedTabColor="{DynamicResource WhiteDarkFontColor}">
    <!--  Pages can be added as references or inline  -->
    <tabbedPages:HomePage IconImageSource="Home" />
    <tabbedPages:BasketPage IconImageSource="Basket" />
    <tabbedPages:ProfilePage IconImageSource="Profile" />

</TabbedPage>